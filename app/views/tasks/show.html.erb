<div>
<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<p><%= @task.completed %></p>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Edit item", edit_task_path(@task) %>
<%= link_to "Go back to list", tasks_path %>
</div>
