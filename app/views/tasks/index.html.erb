<div class='container'>
<h1 class='h1'>Todo's</h1>
<%= link_to 'Add new task', new_task_path, class: 'btn btn-primary p-3 mb-3' %>
<ul class="list-group w-50">
<% @tasks.each do |task| %>
<li>
<% if task.completed == true %>
<i class="fab fa-twitter fa-2x"></i>
<% end %>
<%=link_to task.title, task_path(task.id), class: 'list-group-item'%>
</li>
<% end %>
</ul>
</div>
